class Solution {
public:
    bool isPalindrome(string s) {
      int right = s.length()-1;
      int left = 0;
      while(left < right){
          if (!isalnum(s[left]))
            left++;
          else if(!isalnum(s[right]))
            right --;
            //left != right --false
          else if(tolower(s[left]) != tolower(s[right]))
          return false;
          //if left == right 
          else {
                left++;
                right--;
            }
      }
      //if while loop reaches midlle without false then it is palindrome return true
      return true;
    }
};

